        <!--2-->
        <Frame Grid.Row="0"
               BackgroundColor="#f0f0f0"
               Margin="0,0,0,0">
            <Label Text="Bookings"
                   FontAttributes="Bold"
                   FontSize="40"
                   TextDecorations="Underline"
                   Margin="0,0,0,0" />
        </Frame>
        <!--3-->
        <ListView x:Name="BookingList"
                  BackgroundColor="#f0f0f0"
                  Grid.Row="1"
                  HeightRequest="410"
                  ItemsSource="{Binding Bookings}"
                  Margin="10,0"
                  VerticalOptions="Start"
                  HorizontalOptions="CenterAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame BackgroundColor="#f0f0f0"
                               BorderColor="#cccccc"
                               Padding="5"
                               Margin="0,5,0,5"
                               HasShadow="True">
                            <Grid HeightRequest="100"
                                  HorizontalOptions="FillAndExpand"
                                  VerticalOptions="Start">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding Property}"
                                           TextColor="#757575"
                                           FontSize="12"
                                           VerticalOptions="Center"
                                           Margin="20,0" />
                                    <Label Grid.Column="1"
                                           Text="{Binding Type}"
                                           VerticalOptions="CenterAndExpand"
                                           WidthRequest="30"
                                           Margin="0,0,20,0" />
                                    <Label Text="{Binding Duration}"
                                           Grid.Column="2"
                                           TextColor="Black"
                                           FontAttributes="Bold"
                                           Margin="0,0,10,0"
                                           VerticalOptions="CenterAndExpand" />
                                    <Label Text="{Binding Total}"
                                           Grid.Column="3"
                                           TextColor="Black"
                                           FontSize="15"
                                           VerticalOptions="Center" />
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <!--4-->
        <Frame Grid.Row="2"
               HeightRequest="100"
               BackgroundColor="#f0f0f0"
               Margin="0,0,0,0">
            <Button CornerRadius="20"
                    HeightRequest="100"
                    Text="Create Booking"
                    TextColor="White"
                    BackgroundColor="#8ed444"
                    FontAttributes="Bold"
                    FontSize="30"
                    Clicked="GoToCalcPage">
            </Button>
        </Frame>
    </Grid>
</ContentPage>